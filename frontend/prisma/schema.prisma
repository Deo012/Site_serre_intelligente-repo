generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Connections {
  id        Int    @id @map("_id")
  sessionId Int
  username  String
}

model PlantesInfos {
  id                Int    @id @map("_id")
  common_name       String
  max_humidity      Int
  max_temperature   Int
  min_humidity      Int
  min_temperature   Int
  optimal_soil_type String
  water_needed_ml   Int
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  password  String
  username  String
}
